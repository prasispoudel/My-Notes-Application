<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E4CB1">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="415dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="40dp"
        android:shadowColor="#5E4CB1"
        android:text="@string/back"
        android:textColor="#5E4CB1"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="177dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="177dp"
        android:text="@string/help_section"
        android:textAlignment="center"
        android:textColor="#6D807C"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextMultiLine2"
        android:layout_width="349dp"
        android:layout_height="349dp"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="2dp"
        android:ems="10"
        android:gravity="start|top"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:text="@string/t_t_t_t_t_t_toperation_procedures_t_n_1_press_on_the_home_screen_for_reveling_menu_n_2_click_on_any_note_to_edit_the_note_on_the_note_editor_n_tip_the_note_will_be_saved_automatically_n_when_user_exits_from_the_note_editor_n_3_press_a_particular_note_for_long_than_3_seconds_to_delete_the_note_n_4_notes_can_be_added_using_the_add_note_button_on_the_menu_n_5_the_clear_all_data_will_wipe_all_data_previously_saved_in_the_application_n_n_thank_you_for_using_this_application"
        android:textColor="#6D807C"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>